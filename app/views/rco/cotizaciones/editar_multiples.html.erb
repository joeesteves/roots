<input id="esForm" type="hidden" value=true />
  <div class="row">
   <div class="panel">
    <%= form_tag actualizar_multiples_rco_cuentas_path, method: :put do %>
      <% @rco_cuentas.each do |rco_cuenta| %>

        <div class="row">
        <h3>Empresa: <%= rco_cuenta.nombre.upcase %></h3>
          <div class="panel">
            <%= fields_for "rco_cuentas[]", rco_cuenta, builder: EstandarFormBuilder do |f| %>
            <%= render 'form_fields', f:f %>
            <% end %>
          </div>
        </div>
    <% end %>
    <div class="row">
      <div class="small-12 columns">
      <input id="nodo" name="nodo" type="hidden" value=<%= @nodo %> /> 
        <%= submit_tag "Actualizar", :class => 'button tiny boton_largo' %>
      </div>
    </div>
    <% end %>
  </div>
</div>