  </div>
   <div class="small-1 columns" style="float:right">
    <span class='prefix postfix'></span>
    <h4 style='widht:100%;text-align:center'> 
      <%= agregar_linea "O", f, :registros %>
    </h4>
  </div>
</div>
<div class="row">      
 <div class="small-3 columns">
 <h4 style='text-align:center'>CUENTA</h4>
  </div>
  <div class="small-2 columns">
 <h4 style='text-align:center'>DEBE</h4>
  </div>
  <div class="small-2 columns">
<h4 style='text-align:center'>HABER</h4>
  </div>
  <div class="small-2 columns">
    <h4 style='text-align:center'>VENC</h4>
  </div> 
  <div class="small-2 columns">
    <h4 style='text-align:center'>DESCRIPCION</h4>
  </div>
  <div class="small-1 columns">
  <%= text_field_tag 'vtos',nil , placeholder: 'Vtos'%> 
  </div>

</div>     
  <%= f.fields_for :registros do |builder| %>
    <%= render 'registros_campos', f: builder %>
    <% end %>
<div id="container">
</div>
 
 
 
<div class="row">
  <div class="small-6 columns">
    <%= f.text_field :cotizacion, {class: "hola"} %>
