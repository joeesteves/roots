<%= f.errores %>
<div class="row">      
  <div class="small-3 columns">
    <%= f.date_select :fecha %>
  </div>
  <div class="small-2 columns">

  <span class='prefix postfix'>DEBE SUMA</span>
    <input type="text" id="debe" readonly tabindex="-1" />
  </div>
  <div class="small-2 columns">
  <span class='prefix postfix'>HABER SUMA</span>
 
   <input type="text" id="haber" readonly tabindex="-1" />
  </div>
  <div class="small-2 columns">
  <span class='prefix postfix'>DIF.</span>
 
   <input type="text" id="diferencia" readonly tabindex="-1" />
  </div>
  <div class="small-2 columns">
  <!--   <%= f.collection_select :moneda_id, Rco::Moneda.all, :id, :nombre, label: "Moneda" %> -->
