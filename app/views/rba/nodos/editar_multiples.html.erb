<input id="esForm" type="hidden" value=true />
  <div class="row">
   <div class="panel">
    <%= form_tag actualizar_multiples_rba_nodos_path, method: :put do %>
      <% @rba_nodos.each do |rba_nodo| %>

        <div class="row">
        <h3>Empresa: <%= rba_nodo.nombre.upcase %></h3>
          <div class="panel">
            <%= fields_for "rba_nodos[]", rba_nodo, builder: EstandarFormBuilder do |f| %>
            <%= render 'form_fields', f:f %>
            <% end %>
          </div>
        </div>
    <% end %>
    <div class="row">
      <div class="small-12 columns">
        <%= submit_tag "Actualizar", :class => 'button tiny boton_largo' %>
      </div>
    </div>
    <% end %>
  </div>
</div>