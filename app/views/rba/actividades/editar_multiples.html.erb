<input id="esForm" type="hidden" value=true />
<div class="row">
  <div class="panel">
    <%= form_tag actualizar_multiples_rba_actividades_path, method: :put do %>
    <% @rba_actividades.each do |rba_actividad| %>

    <div class="row">
    <h3>Grupo: <%= rba_actividad.nombre.upcase %></h3>
<div class="panel">
<%= fields_for "rba_actividades[]", rba_actividad, builder: EstandarFormBuilder do |f| %>
<%= render 'form_fields', f:f %>
<% end %>
</div>
</div>
<% end %>
<div class="row">
<div class="small-12 columns">
      <input id="nodo" name="nodo" type="hidden" value=<%= @nodo %> /> 

<%= submit_tag "Actualizar", :class => 'button tiny boton_largo' %>
</div>
</div>
<% end %>
</div>
</div>