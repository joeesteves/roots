<%= f.errores %>
<div class="row">      
  <div class="small-3 columns">
    <%= f.date_select :fecha %>
  </div>
  <div class="small-3 columns">
    <%= f.select :operaciontipo_id, Rad::Operaciontipo.where(:estado => 1).
    map {|c| [c.nombre, c.id, {data: {codigo: c.codigo}}]}, {:selected => @rad_operacion.operaciontipo_id}, {label: "Op. Tipo"} %>
	</div>
  <div class="small-3 columns">
    <%= f.text_field :importe, class: "calcCuota" %>
  </div>
  <div class="small-1 columns">
    <%= f.number_field :cuotas, class: "calcCuota" %>
  </div>
  <div class="small-2 columns">
    <%= f.text_field :cuotaimporte, {label: "Valor Cuota", class: "calcCuotaInv", :tabindex => -1} %>
  </div>
  <div class="small-3 columns">
  <%= f.collection_select :ctaD_id, @cuentas[:debe], :id, :nombre, {}, {label: "Cuenta Debe"} %>
	</div>
  <div class="small-3 columns">
  <%= f.collection_select :ctaH_id, Rco::Cuenta.all, :id, :nombre, {}, {label: "Cuenta Haber"} %>
	</div>
  <div class="small-3 columns">
    <%= f.text_area :desc %>
  </div>


  <div class="small-1 columns">
    <%= f.check_box :rdosxmes, {label: "Rmes"} %>
  </div>
  
  <div class="small-12 columns">
    <% unless @compatibles.empty? %> 
     <%= select_tag "aplicaciones" , options_from_collection_for_select(@compatibles, :id, :desc) , {} %>
    <%end%>
  </div>0
</div>