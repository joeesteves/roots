<input id="esForm" type="hidden" value=true />
<div class="row">
  <div class="panel">
    <%= form_tag actualizar_multiples_rad_operaciones_path, method: :put do %>
    <% @rad_operaciones.each do |rad_operacion| %>

    <div class="row">
    <h3>Grupo: <%= rad_operacion.nombre.upcase %></h3>
<div class="panel">
<%= fields_for "rad_operaciones[]", rad_operacion, builder: EstandarFormBuilder do |f| %>
<%= render 'form_fields', f:f %>
<% end %>
</div>
</div>
<% end %>
<div class="row">
<div class="small-12 columns">
      <input id="nodo" name="nodo" type="hidden" value=<%= @nodo %> /> 

<%= submit_tag "Actualizar", :class => 'button tiny boton_largo' %>
</div>
</div>
<% end %>
</div>
</div>