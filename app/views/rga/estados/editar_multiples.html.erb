<input id="esForm" type="hidden" value=true />
<div class="row">
  <div class="panel">
    <%= form_tag actualizar_multiples_rga_estados_path, method: :put do %>
    <% @rga_estados.each do |rga_estado| %>

    <div class="row">
    <h3>Grupo: <%= rga_estado.nombre.upcase %></h3>
<div class="panel">
<%= fields_for "rga_estados[]", rga_estado, builder: EstandarFormBuilder do |f| %>
<%= render 'form_fields', f:f %>
<% end %>
</div>
</div>
<% end %>
<div class="row">
<div class="small-12 columns">
      <input id="nodo" name="nodo" type="hidden" value=<%= @nodo %> /> 

<%= submit_tag "Actualizar", :class => 'button tiny boton_largo' %>
</div>
</div>
<% end %>
</div>
</div>