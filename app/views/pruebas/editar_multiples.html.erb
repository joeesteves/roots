<input id="esForm" type="hidden" value=true />
  <div class="row">
   <div class="panel">
    <%= form_tag actualizar_multiples_pruebas_path, method: :put do %>
      <% @pruebas.each do |prueba| %>

        <div class="row">
        <h3>Empresa: <%= prueba.nombre.upcase %></h3>
          <div class="panel">
            <%= fields_for "pruebas[]", prueba, builder: EstandarFormBuilder do |f| %>
            <%= render 'form_fields', f:f %>
            <% end %>
          </div>
        </div>
    <% end %>
    <div class="row">
      <div class="small-12 columns">
        <%= submit_tag "Actualizar", :class => 'button tiny boton_largo' %>
      </div>
    </div>
    <% end %>
  </div>
</div>